{
	"name": "NODE_PROJECT_TEMPLATE",
	"version": "1.0.0",
	"description": "Boilerplate for a NodeJS project in strict TypeScript.",
	"scripts": {
		"prebuild": "npm run export-version && npm run lint",
		"build": "./node_modules/.bin/tsc -p tsconfig.prod.json",
		"build:clean": "rm -rf lib && npm run build",
		"start": "./node_modules/.bin/nodemon --inspect .",
		"test": "./node_modules/.bin/vitest run",
		"test:watch": "./node_modules/.bin/vitest watch --coverage=false",
		"export-version": "./node_modules/.bin/genversion ./src/version.ts -es",
		"lint": "./node_modules/.bin/eslint . --ext .ts",
		"lint:fix": "./node_modules/.bin/eslint . --ext .ts --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AverageHelper/NODE_PROJECT_TEMPLATE.git"
	},
	"keywords": [
		"node"
	],
	"author": "Average Helper",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/AverageHelper/NODE_PROJECT_TEMPLATE/issues"
	},
	"homepage": "https://github.com/AverageHelper/NODE_PROJECT_TEMPLATE#readme",
	"type": "module",
	"main": "./lib/main.js",
	"files": [
		"lib/"
	],
	"engines": {
		"node": "^18.17.0"
	},
	"dependencies": {
		"source-map-support": "0.5.21"
	},
	"devDependencies": {
		"@types/node": "18.17.11",
		"@types/source-map-support": "0.5.7",
		"@typescript-eslint/eslint-plugin": "6.4.1",
		"@typescript-eslint/parser": "6.4.1",
		"@vitest/coverage-istanbul": "0.34.3",
		"eslint": "8.48.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-config-strictest": "0.8.1",
		"eslint-plugin-deprecation": "1.5.0",
		"eslint-plugin-file-progress": "1.3.0",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-prettier": "5.0.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "48.0.1",
		"eslint-plugin-vitest": "0.2.8",
		"genversion": "3.1.1",
		"jest-extended": "4.0.1",
		"nodemon": "3.0.1",
		"prettier": "3.0.2",
		"typescript": "4.9.5",
		"vitest": "0.34.3"
	}
}
